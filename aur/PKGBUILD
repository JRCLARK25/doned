# Maintainer: Your Name <your.email@example.com>
# Contributor: 
pkgname=doned
gitname=doned
descname="Discord & Others Notification Engine Damnit"
pkgver=1.0
pkgrel=1
pkgdesc="Send notifications to Discord, Telegram, Google Chats, Teams, and Slack from the command line."
arch=('any')
url="https://github.com/JRCLARK25/doned"
license=('GPL2')
depends=('bash' 'curl')
source=("doned::https://github.com/JRCLARK25/doned/raw/main/discord-notifier/usr/bin/doned" "notify-discord::https://github.com/JRCLARK25/doned/raw/main/discord-notifier/usr/bin/notify-discord" "README.md::https://raw.githubusercontent.com/JRCLARK25/doned/main/README.md")
sha256sums=('SKIP' 'SKIP' 'SKIP')

package() {
  install -Dm755 "$srcdir/doned" "$pkgdir/usr/bin/doned"
  install -Dm755 "$srcdir/notify-discord" "$pkgdir/usr/bin/notify-discord"
  install -Dm644 "$srcdir/README.md" "$pkgdir/usr/share/doc/${pkgname}/README.md"
}

# To build:
#   makepkg -si
# To publish to AUR, upload PKGBUILD and supporting files to AUR repo.
