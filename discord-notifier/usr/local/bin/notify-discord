#!/bin/bash
[ -f /etc/done.conf ] && source /etc/done.conf
MESSAGE="${1:-âœ… Task complete on $(hostname)}"

if [ -z "$WEBHOOK_URL" ]; then
  echo "Error: WEBHOOK_URL not set." >&2
  exit 1
fi

curl -s -H "Content-Type: application/json" \
     -X POST \
     -d "{\"content\":\"$MESSAGE\"}" \
     "$WEBHOOK_URL" > /dev/null
